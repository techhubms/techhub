---
layout: null
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ site.title | xml_escape }}</title>
  <link href="{{ site.url }}{{ site.baseurl }}/feed.xml" rel="self" type="application/atom+xml"/>
  <link href="{{ site.url }}{{ site.baseurl }}/" rel="alternate" type="text/html"/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>{{ site.url }}{{ site.baseurl }}/</id>
  <author>
    <name>{{ site.author | xml_escape }}</name>
  </author>
  <generator uri="https://jekyllrb.com/" version="{{ jekyll.version }}">Jekyll</generator>

  {%- comment -%} Get all documents from all collections {%- endcomment -%}
  {%- assign all_items = site.documents | where_exp: "item", "item.date" -%}
  {%- assign sorted_items = all_items | sort: 'date' | reverse -%}
  {%- assign latest_items = sorted_items | slice: 0, 50 -%}

  {%- for item in latest_items -%}
  <entry>
    <title type="html">{{ item.title | xml_escape }}</title>
    {%- if item.viewing_mode == "external" and item.canonical_url -%}
    <link href="{{ item.canonical_url }}" rel="alternate" type="text/html" title="{{ item.title | xml_escape }}"/>
    {%- else -%}
    <link href="{{ site.url }}{{ site.baseurl }}{{ item.url }}" rel="alternate" type="text/html" title="{{ item.title | xml_escape }}"/>
    {%- endif -%}
    <published>{{ item.date | date_to_xmlschema }}</published>
    <updated>{{ item.date | date_to_xmlschema }}</updated>
    {%- if item.viewing_mode == "external" and item.canonical_url -%}
    <id>{{ item.canonical_url }}</id>
    {%- else -%}
    <id>{{ site.url }}{{ site.baseurl }}{{ item.url }}</id>
    {%- endif -%}
    {%- if item.viewing_mode == "external" and item.canonical_url -%}
    <content type="html" xml:base="{{ item.canonical_url }}">
    {%- else -%}
    <content type="html" xml:base="{{ site.url }}{{ site.baseurl }}{{ item.url }}">
    {%- endif -%}
      <![CDATA[
        <h1>{{ item.title | xml_escape }}</h1>
        {%- if item.excerpt -%}
          {{ item.excerpt }}
        {%- else -%}
          {{ item.content | truncate: 500 }}
        {%- endif -%}
      ]]>
    </content>
    <author>
      <name>{%- if item.author -%}{{ item.author | xml_escape }}{%- elsif item.feed_name -%}{{ item.feed_name | xml_escape }}{%- else -%}Unknown{%- endif -%}</name>
    </author>
    {%- if item.tags and item.tags.size > 0 -%}
      {%- for tag in item.tags -%}
    <category term="{{ tag | xml_escape }}" />
      {%- endfor -%}
    {%- endif -%}
  </entry>
  {%- endfor -%}
</feed>