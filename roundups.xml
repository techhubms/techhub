---
layout: null
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ site.title | xml_escape }} - Roundups</title>
  <link href="{{ site.url }}{{ site.baseurl }}/roundups.xml" rel="self" type="application/atom+xml"/>
  <link href="{{ site.url }}{{ site.baseurl }}/" rel="alternate" type="text/html"/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>{{ site.url }}{{ site.baseurl }}/roundups</id>
  <author>
    <name>{{ site.author | xml_escape }}</name>
  </author>
  <generator uri="https://jekyllrb.com/" version="{{ jekyll.version }}">Jekyll</generator>

  {%- comment -%} Get all items from roundups collection only {%- endcomment -%}
  {%- assign roundup_items = site.roundups | where_exp: "item", "item.date" -%}
  {%- assign sorted_items = roundup_items | sort: 'date' | reverse -%}

  {%- for item in sorted_items -%}
  <entry>
    <title type="html">{{ item.title | xml_escape }}</title>
    <link href="{{ site.url }}{{ site.baseurl }}{{ item.url }}" rel="alternate" type="text/html" title="{{ item.title | xml_escape }}"/>
    <published>{{ item.date | date_to_xmlschema }}</published>
    <updated>{{ item.date | date_to_xmlschema }}</updated>
    <id>{{ site.url }}{{ site.baseurl }}{{ item.url }}</id>
    <content type="html" xml:base="{{ site.url }}{{ site.baseurl }}{{ item.url }}">
      <![CDATA[
        <h1>{{ item.title | xml_escape }}</h1>
        {{ item.excerpt }}
      ]]>
    </content>
    <author>
      <name>{{ item.author | xml_escape }}</name>
    </author>
    {%- for tag in item.tags -%}
    <category term="{{ tag | xml_escape }}" />
    {%- endfor -%}
  </entry>
  {%- endfor -%}
</feed>
