@page "/not-found"
@layout MainLayout
@inject NavigationManager Navigation

<PageTitle>Not Found - Tech Hub</PageTitle>

<SkipLink />

<Header>
    <SectionBanner Title="Not Found" Description="Sorry, the content you are looking for does not exist" />
</Header>

<main class="page-without-sidebar">
    <section>
        <p><a href="/" class="back-link">← Back to Home</a></p>
    </section>
</main>

@code {
    [CascadingParameter]
    private HttpContext? HttpContext { get; set; }

    protected override void OnInitialized()
    {
        // Set 404 status code for this page
        if (HttpContext != null && HttpContext.Response.StatusCode == 200)
        {
            HttpContext.Response.StatusCode = StatusCodes.Status404NotFound;
        }
    }
}