@page "/ai/genai-applied"
@using TechHub.Core.DTOs
@using TechHub.Web.Services

@inject TechHubApiClient ApiClient
@inject NavigationManager Navigation
@inject ErrorService ErrorService
@inject ILogger<GenAIApplied> Logger

<PageTitle>@(pageData?.Title ?? "GenAI Applied") - Tech Hub</PageTitle>

@if (sectionData != null && pageData != null)
{
    <HeadContent>
        <link rel="canonical" href="https://tech.hub.ms/ai/genai-applied" />
    </HeadContent>

    <header class="site-header">
        <NavHeader />
        <SectionBanner Section="@sectionData" />
        <SubNav Section="@sectionData" />
    </header>

    <main class="page-with-sidebar">
        <aside class="sidebar">
            @if (pageData.RelatedPages.Any())
            {
                <nav class="sidebar-section" aria-label="Related pages">
                    <h2 class="sidebar-h2">Related Pages</h2>
                    <ul class="sidebar-list">
                        @foreach (var related in pageData.RelatedPages)
                        {
                            <li>
                                <a href="@related.Url" class="sidebar-link-button">@related.Title</a>
                            </li>
                        }
                    </ul>
                </nav>
            }

            <SidebarToc HtmlContent="@GetRenderedContent()" Title="Table of Contents" />
        </aside>

        <article class="article-body">
            <div class="content-detail-header">
                <h1 class="page-h1" tabindex="-1">@pageData.Title</h1>
                @if (!string.IsNullOrWhiteSpace(pageData.Description))
                {
                    <p class="page-description">@pageData.Description</p>
                }
            </div>

            <div class="custom-page-container">
                <div class="custom-page-intro">
                    <p>@pageData.Intro</p>
                </div>

                @foreach (var contentSection in pageData.Sections)
                {
                    <div class="custom-page-section">
                        <h2 id="@contentSection.Id">@contentSection.Title</h2>
                        @if (!string.IsNullOrEmpty(contentSection.Intro))
                        {
                            <p>@contentSection.Intro</p>
                        }

                        @if (contentSection.LearningPath != null)
                        {
                            <div class="genai-learning-path">
                                <ol>
                                    @foreach (var step in contentSection.LearningPath)
                                    {
                                        <li>@step</li>
                                    }
                                </ol>
                            </div>
                        }

                        @if (contentSection.Projects != null)
                        {
                            <div class="genai-projects">
                                @foreach (var project in contentSection.Projects)
                                {
                                    <div class="genai-project-card">
                                        <h3>@project.Title</h3>
                                        <p>@project.Description</p>
                                        @if (project.Link != null)
                                        {
                                            <a href="@project.Link.Url" target="_blank" rel="noopener">@project.Link.Text</a>
                                        }
                                    </div>
                                }
                            </div>
                        }

                        @if (contentSection.Layers != null)
                        {
                            <div class="genai-layers">
                                @foreach (var layer in contentSection.Layers)
                                {
                                    <div class="genai-layer-card">
                                        <h3>@layer.Name</h3>
                                        <p>@layer.Description</p>
                                    </div>
                                }
                            </div>
                        }

                        @if (contentSection.Tools != null)
                        {
                            <div class="genai-tools">
                                @foreach (var tool in contentSection.Tools)
                                {
                                    <div class="genai-tool-card">
                                        <h3>@tool.Name</h3>
                                        <ul>
                                            @foreach (var feature in tool.Features)
                                            {
                                                <li>@feature</li>
                                            }
                                        </ul>
                                    </div>
                                }
                            </div>
                        }

                        @if (contentSection.Capabilities != null)
                        {
                            <div class="genai-capabilities">
                                <ul>
                                    @foreach (var capability in contentSection.Capabilities)
                                    {
                                        <li>@capability</li>
                                    }
                                </ul>
                            </div>
                        }

                        @if (contentSection.Modes != null)
                        {
                            <div class="genai-modes">
                                @foreach (var mode in contentSection.Modes)
                                {
                                    <div class="genai-mode-card">
                                        <h3>@mode.Name</h3>
                                        <p>@mode.Description</p>
                                    </div>
                                }
                            </div>
                        }

                        @if (contentSection.Customization != null)
                        {
                            <div class="genai-customization">
                                <ul>
                                    @foreach (var item in contentSection.Customization)
                                    {
                                        <li>@item</li>
                                    }
                                </ul>
                            </div>
                        }

                        @if (contentSection.Faq != null)
                        {
                            <div class="genai-faq">
                                @foreach (var faq in contentSection.Faq)
                                {
                                    <div class="genai-faq-item">
                                        <h3>@faq.Question</h3>
                                        <p>@faq.Answer</p>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                }

                <nav class="custom-page-navigation">
                    <div class="nav-prev">
                        <span class="nav-label">Previous</span>
                        <a href="@pageData.PreviousPage.Url">
                            <span class="nav-title">@pageData.PreviousPage.Title</span>
                            @if (!string.IsNullOrEmpty(pageData.PreviousPage.Description))
                            {
                                <span class="nav-description">@pageData.PreviousPage.Description</span>
                            }
                        </a>
                    </div>
                </nav>
            </div>
        </article>
    </main>
}

<ConditionalScripts LoadSyntaxHighlighting="true" LoadMermaid="true" LoadTocScrollSpy="true" />

@code {
    private SectionDto? sectionData;
    private GenAIAppliedPageData? pageData;

    private string GetRenderedContent()
    {
        if (pageData?.TableOfContents == null)
            return string.Empty;

        var sb = new System.Text.StringBuilder();
        foreach (var item in pageData.TableOfContents)
        {
            sb.Append($"<h2 id=\"{item.Id}\">{item.Title}</h2>");
        }
        return sb.ToString();
    }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            sectionData = await ApiClient.GetSectionAsync("ai");
            pageData = await ApiClient.GetGenAIAppliedDataAsync();

            if (sectionData == null || pageData == null)
            {
                Navigation.NavigateTo("/not-found");
            }
        }
        catch (Exception ex)
        {
            ErrorService.HandleError(ex, Navigation, Logger);
        }
    }
}