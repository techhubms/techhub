@page "/github-copilot/handbook"
@using TechHub.Core.DTOs
@using TechHub.Web.Services

@inject TechHubApiClient ApiClient
@inject NavigationManager Navigation
@inject ErrorService ErrorService
@inject ILogger<GitHubCopilotHandbook> Logger

<PageTitle>@(pageData?.Title ?? "GitHub Copilot Handbook") - Tech Hub</PageTitle>

@if (pageData != null)
{
    <HeadContent>
        <link rel="canonical" href="https://tech.hub.ms/github-copilot/handbook" />
    </HeadContent>

    <Header SectionName="github-copilot" />

    <main class="page-with-sidebar">
        <aside class="sidebar">
            <SidebarToc HtmlContent="@GetRenderedContent()" Title="Table of Contents" />
        </aside>

        <article class="article-body">
            <div class="content-detail-header">
                <h1 class="page-h1" tabindex="-1">@pageData.Title</h1>
                @if (!string.IsNullOrWhiteSpace(pageData.Description))
                {
                    <p class="page-description">@pageData.Description</p>
                }
            </div>

            <div class="handbook-container">
                @* Book Hero - Featured book presentation *@
                <div class="handbook-hero">
                    <div class="handbook-hero-cover">
                        <img src="/images/ghc-handbook.jpg" alt="GitHub Copilot Handbook Book Cover" loading="lazy" />
                        <div class="handbook-cover-glow"></div>
                    </div>

                    <div class="handbook-hero-content">
                        <p class="handbook-tagline">Your Complete Guide to AI-Powered Development</p>

                        <p class="handbook-description">@pageData.Intro</p>

                        <div class="handbook-meta">
                            <div class="handbook-meta-item">
                                <span class="handbook-meta-label">Authors</span>
                                <span class="handbook-meta-value">@string.Join(", ", pageData.Authors)</span>
                            </div>
                            <div class="handbook-meta-item">
                                <span class="handbook-meta-label">Publisher</span>
                                <span class="handbook-meta-value">@pageData.BookDetails.Publisher</span>
                            </div>
                            <div class="handbook-meta-item">
                                <span class="handbook-meta-label">Released</span>
                                <span class="handbook-meta-value">@pageData.BookDetails.Released</span>
                            </div>
                            <div class="handbook-meta-item">
                                <span class="handbook-meta-label">Pages</span>
                                <span class="handbook-meta-value">@pageData.BookDetails.Pages</span>
                            </div>
                        </div>

                        @if (pageData.PurchaseLink != null)
                        {
                            <a href="@pageData.PurchaseLink.Url" class="handbook-cta" target="_blank" rel="noopener">
                                <span class="handbook-cta-text">@pageData.PurchaseLink.Text</span>
                                <svg class="handbook-cta-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                    stroke-width="2">
                                    <path d="M5 12h14M12 5l7 7-7 7" />
                                </svg>
                            </a>
                        }
                    </div>
                </div>

                @* About the Book *@
                <section class="handbook-section">
                    <h2 id="about-book">About the Book</h2>
                    @foreach (var paragraph in pageData.AboutBook)
                    {
                        <p>@paragraph</p>
                    }
                </section>

                @* What You'll Learn *@
                <section class="handbook-section">
                    <h2 id="learnings">What You'll Learn</h2>
                    <ul class="handbook-learnings">
                        @foreach (var learning in pageData.Learnings)
                        {
                            <li>@learning</li>
                        }
                    </ul>
                </section>

                @* Audience *@
                <section class="handbook-section">
                    <h2 id="audience">Who Is This Book For</h2>
                    <p>@pageData.Audience.Intro</p>
                    <p>@pageData.Audience.Details</p>
                </section>

                @* Key Features *@
                <section class="handbook-section">
                    <h2 id="key-features">Key Features</h2>
                    <div class="handbook-features-grid">
                        @foreach (var feature in pageData.KeyFeatures)
                        {
                            <div class="handbook-feature-card">
                                <h3>@feature.Title</h3>
                                <p>@feature.Description</p>
                            </div>
                        }
                    </div>
                </section>

                @* Table of Contents *@
                <section class="handbook-section">
                    <h2 id="toc">Table of Contents</h2>
                    <ol class="handbook-toc">
                        @foreach (var chapter in pageData.TableOfContents)
                        {
                            <li>@chapter</li>
                        }
                    </ol>
                </section>

                @* Authors *@
                <section class="handbook-section">
                    <h2 id="authors">About the Authors</h2>
                    <div class="handbook-authors">
                        @foreach (var author in pageData.AuthorBios)
                        {
                            <div class="handbook-author-card">
                                <h3>@author.Name</h3>
                                <p>@author.Bio</p>
                            </div>
                        }
                    </div>
                </section>

                @* Conclusion *@
                <section class="handbook-section handbook-conclusion">
                    <p>@pageData.Conclusion</p>
                </section>
            </div>
        </article>
    </main>
}

@code {
    private HandbookPageData? pageData;

    /// <summary>
    /// Generate HTML content for TOC extraction.
    /// SidebarToc will extract headings from this HTML automatically.
    /// </summary>
    private static string GetRenderedContent()
    {
        var sb = new System.Text.StringBuilder();
        sb.Append("<h2 id=\"about-book\">About the Book</h2>");
        sb.Append("<h2 id=\"learnings\">What You'll Learn</h2>");
        sb.Append("<h2 id=\"audience\">Who Is This Book For</h2>");
        sb.Append("<h2 id=\"key-features\">Key Features</h2>");
        sb.Append("<h2 id=\"toc\">Table of Contents</h2>");
        sb.Append("<h2 id=\"authors\">About the Authors</h2>");
        return sb.ToString();
    }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            pageData = await ApiClient.GetHandbookDataAsync();

            if (pageData == null)
            {
                Navigation.NavigateTo("/not-found");
            }
        }
        catch (Exception ex)
        {
            ErrorService.HandleError(ex, Navigation, Logger);
        }
    }
}