@* Reusable sidebar component for back navigation *@
<div class="sidebar-section">
    <a href="@BackUrl" class="button-link primary">
        @BackText
    </a>
</div>

@code {
    [Parameter, EditorRequired]
    public required string BackUrl { get; set; }

    [Parameter]
    public string BackText { get; set; } = "Back";
}