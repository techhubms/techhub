@using TechHub.Core.DTOs

<section class="content-grid-container">
    @if (Items != null && Items.Any())
    {
        <div class="content-grid">
            @foreach (var item in Items)
            {
                <ContentItemCard Item="@item" ShowCollectionBadge="@ShowCollectionBadge" />
            }
        </div>
    }
    else if (IsLoading)
    {
        <div class="loading">
            <p>Loading content...</p>
        </div>
    }
    else
    {
        <div class="no-content">
            <p>No content available in this collection.</p>
        </div>
    }
</section>

@code {
    [Parameter, EditorRequired]
    public IEnumerable<ContentItemDto> Items { get; set; } = null!;

    [Parameter]
    public bool IsLoading { get; set; }

    [Parameter]
    public bool ShowCollectionBadge { get; set; } = true;
}
