    <script>
        // Initialize Highlight.js for syntax highlighting
        document.addEventListener('DOMContentLoaded', function () {
            if (typeof hljs !== 'undefined') {
                hljs.highlightAll();
            }
        });

        // Re-highlight after Blazor navigation
        if (typeof Blazor !== 'undefined') {
            Blazor.addEventListener('enhancedload', function () {
                if (typeof hljs !== 'undefined') {
                    hljs.highlightAll();
                }
            });
        }
    </script>
}

@if (LoadMermaid)
{
    <!-- Mermaid Diagrams -->
    <script src="https://cdn.jsdelivr.net/npm/mermaid@10/dist/mermaid.min.js" defer></script>

    <script>
        // Mermaid configuration with dark theme matching production
        const mermaidConfig = {
            startOnLoad: false, // Manual control for better reliability after navigation
            theme: 'dark',
            themeVariables: {
                primaryColor: '#2d2d4a',
                primaryTextColor: '#e0e0e0',
                primaryBorderColor: '#64b5f6',
                lineColor: '#64b5f6',
                secondaryColor: '#1a1a2e',
                tertiaryColor: '#16162a',
                background: '#1a1a2e',
                mainBkg: '#2d2d4a',
                secondBkg: '#1a1a2e',
                labelBackground: '#2d2d4a',
                labelColor: '#e0e0e0',
                nodeTextColor: '#e0e0e0',
                textColor: '#e0e0e0',
                titleColor: '#e0e0e0',
                edgeLabelBackground: '#2d2d4a',
                clusterBkg: '#16162a',
                clusterBorder: '#64b5f6',
                defaultLinkColor: '#64b5f6',
                activationBorderColor: '#64b5f6',
                activationBkgColor: '#2d2d4a',
                sequenceNumberColor: '#1a1a2e'
            },
            flowchart: {
                curve: 'basis',
                padding: 15
            }
        };

        // Initialize and render Mermaid diagrams
        async function initMermaid() {
            if (typeof mermaid === 'undefined') return;

            // Initialize Mermaid with config (only needed once)
            mermaid.initialize(mermaidConfig);

            // Find all unprocessed mermaid elements
            const mermaidElements = document.querySelectorAll('.mermaid:not([data-processed="true"])');

            if (mermaidElements.length === 0) return;

            try {
                // Use mermaid.run() (modern v10+ API) to render diagrams
                await mermaid.run({
                    nodes: mermaidElements,
                });
            } catch (error) {
                console.error('Mermaid rendering failed:', error);
            }
        }

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function () {
            initMermaid();
        });

        // Re-render Mermaid diagrams after Blazor enhanced navigation
        if (typeof Blazor !== 'undefined') {
            Blazor.addEventListener('enhancedload', async function () {
                // Small delay to ensure DOM is fully updated after navigation
                await new Promise(resolve => setTimeout(resolve, 100));
                await initMermaid();
            });
        }
    </script>
}

@if (LoadTocScrollSpy)
{
    <!-- TOC Scroll Spy -->
    <script type="module">
        import { initTocScrollSpy, cleanupAllTocScrollSpies } from '/js/toc-scroll-spy.js';

        // Initialize on page load
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', () => {
                initTocScrollSpy();
            });
        } else {
            initTocScrollSpy();
        }

        // Re-initialize after Blazor enhanced navigation
        if (typeof Blazor !== 'undefined') {
            Blazor.addEventListener('enhancedload', function () {
                // CRITICAL: Clean up old instances before creating new ones
                cleanupAllTocScrollSpies();
                initTocScrollSpy();
            });
        }
    </script>
}

@if (LoadCustomPagesInteractivity)
{
    <!-- Custom Pages Interactivity (collapsible sections) -->
    <script src="js/custom-pages.js" defer></script>
}

@code {
    /// <summary>
    /// Whether to load syntax highlighting scripts (Highlight.js + language files).
    /// Enable for pages with code blocks.
    /// </summary>
    [Parameter]
    public bool LoadSyntaxHighlighting { get; set; } = false;

    /// <summary>
    /// Whether to load Mermaid diagram library.
    /// Enable for pages with diagrams.
    /// </summary>
    [Parameter]
    public bool LoadMermaid { get; set; } = false;

    /// <summary>
    /// Whether to load TOC scroll spy functionality.
    /// Enable for pages with table of contents.
    /// </summary>
    [Parameter]
    public bool LoadTocScrollSpy { get; set; } = false;

    /// <summary>
    /// Whether to load custom pages interactivity (collapsible sections).
    /// Enable for AISDLC and similar pages with collapsible content.
    /// </summary>
    [Parameter]
    public bool LoadCustomPagesInteractivity { get; set; } = false;
}