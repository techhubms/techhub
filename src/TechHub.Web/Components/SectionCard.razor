@using TechHub.Core.DTOs
@inject NavigationManager Navigation

<div class="section-card-container">
    <a href="@Section.Url" class="section-card" aria-label="View @Section.Title section">
        <div class="section-card-header section-bg-@Section.Name" role="img"
            aria-label="@Section.Title section background">
            <div class="section-overlay">
                <h2>@Section.Title</h2>
            </div>
        </div>
        <div class="section-body">
            <p class="section-description">@Section.Description</p>
        </div>
    </a>
    @if (Section.Collections.Any())
    {
        <nav class="section-collections" aria-label="@Section.Title collections">
            @* Show first 4 collections/pages (both regular and custom) *@
            @foreach (var collection in Section.Collections.Take(4))
            {
                @if (collection.IsCustom)
                {
                    @* Custom pages *@
                    <a href="@collection.Url" class="badge-custom"
                        aria-label="View @collection.Title custom page">
                        @collection.Title
                    </a>
                }
                else
                {
                    @* Regular collections *@
                    <a href="@collection.Url" class="badge-purple" aria-label="View @collection.Title collection">
                        @collection.Title
                    </a>
                }
            }
            @if (Section.Collections.Count > 4)
            {
                <span class="badge-grey"
                    aria-label="@(Section.Collections.Count - 4) more collections available">+@(Section.Collections.Count - 4)
                    more</span>
            }
        </nav>
    }
</div>

@code {
    [Parameter, EditorRequired]
    public SectionDto Section { get; set; } = null!;
}