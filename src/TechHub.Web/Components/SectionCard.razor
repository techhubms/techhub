@using TechHub.Core.DTOs
@inject NavigationManager Navigation

<a href="/@Section.Id" class="section-card-link">
    <div class="section-card">
        <div class="section-header" style="background-image: url('@Section.BackgroundImage')">
            <div class="section-overlay">
                <h2>@Section.Title</h2>
            </div>
        </div>
        <div class="section-body">
            <p class="section-description">@Section.Description</p>
            @if (Section.Collections.Any())
            {
                <div class="section-collections">
                    @foreach (var collection in Section.Collections.Where(c => !string.IsNullOrEmpty(c.Collection)).Take(4))
                    {
                        <span class="collection-badge">
                            @collection.Title
                        </span>
                    }
                    @if (Section.Collections.Count(c => !string.IsNullOrEmpty(c.Collection)) > 4)
                    {
                        <span class="collection-badge">+@(Section.Collections.Count(c => !string.IsNullOrEmpty(c.Collection)) - 4) more</span>
                    }
                </div>
            }
        </div>
    </div>
</a>

@code {
    [Parameter, EditorRequired]
    public SectionDto Section { get; set; } = null!;
}

