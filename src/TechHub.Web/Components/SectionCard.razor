@using TechHub.Core.DTOs
@inject NavigationManager Navigation

<div class="section-card">
    <a href="@Section.Url" class="section-card-link">
        <div class="section-card-header" style="background-image: url('@Section.BackgroundImage')">
            <div class="section-overlay">
                <h2>@Section.Title</h2>
            </div>
        </div>
    </a>
    <div class="section-body">
        <a href="@Section.Url" class="section-description-link">
            <p class="section-description">@Section.Description</p>
        </a>
        @if (Section.Collections.Any())
        {
            <div class="section-collections">
                @* Show first 4 collections/pages (both regular and custom) *@
                @foreach (var collection in Section.Collections.Take(4))
                {
                    var href = collection.IsCustom ? collection.Url : $"{Section.Url}/{collection.Name}";
                    <a href="@href" class="collection-badge-link">
                        <span class="collection-badge @(collection.IsCustom ? "custom-page-badge" : "")">
                            @collection.Title
                        </span>
                    </a>
                }
                @if (Section.Collections.Count > 4)
                {
                    <span class="collection-badge">+@(Section.Collections.Count - 4) more</span>
                }
            </div>
        }
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public SectionDto Section { get; set; } = null!;
}

