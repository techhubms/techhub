@using TechHub.Core.DTOs
@inject NavigationManager Navigation

<div class="section-card">
    <a href="/@Section.Name" class="section-card-link">
        <div class="section-card-header" style="background-image: url('@Section.BackgroundImage')">
            <div class="section-overlay">
                <h2>@Section.Title</h2>
            </div>
        </div>
    </a>
    <div class="section-body">
        <a href="/@Section.Name" class="section-description-link">
            <p class="section-description">@Section.Description</p>
        </a>
        @if (Section.Collections.Any())
        {
            <div class="section-collections">
                @foreach (var collection in Section.Collections.Where(c => !string.IsNullOrEmpty(c.Name)).Take(4))
                {
                    <a href="/@Section.Name/@collection.Name" class="collection-badge-link">
                        <span class="collection-badge">
                            @collection.Title
                        </span>
                    </a>
                }
                @if (Section.Collections.Count(c => !string.IsNullOrEmpty(c.Name)) > 4)
                {
                    <span class="collection-badge">+@(Section.Collections.Count(c => !string.IsNullOrEmpty(c.Name)) - 4) more</span>
                }
            </div>
        }
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public SectionDto Section { get; set; } = null!;
}

