{
  "name": "Jekyll",
  "image": "mcr.microsoft.com/devcontainers/jekyll",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/devcontainers/features/powershell:1": {}
  },
  "forwardPorts": [
    4000
  ],
  "portsAttributes": {
    "4000": {
      "label": "Jekyll Server"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "DavidAnson.vscode-markdownlint",
        "ms-vscode.powershell",
        "Jekyll.vscode-jekyll-syntax",
        "Jekyll.vscode-jekyll-snippets",
        "ms-python.python",
        "Shopify.theme-check-vscode",
        "ms-playwright.playwright",
        "orta.vscode-jest",
        "Shopify.ruby-lsp",
        "kaiwood.endwise"
      ],
      "settings": {
        "chat.agent.enabled": true,
        "chat.mcp.enabled": true,
        "chat.mcp.autostart": "newAndOutdated",
        "chat.checkpoints.enabled": true,
        "chat.editRequests": "inline",
        "chat.math.enabled": true,
        "chat.notifyWindowOnConfirmation": true,
        "chat.todoListTool.enabled": true,
        "chat.agentSessionsViewLocation": "view",
        "powershell.debugging.createTemporaryIntegratedConsole": true,
        "terminal.integrated.defaultProfile.linux": "pwsh",
        "remote.autoForwardPorts": false,
        "remote.autoForwardPortsSource": "hybrid",
        "jest.jestCommandLine": "npm test --prefix spec/javascript",
        "jest.rootPath": "spec/javascript",
        "playwright.reuseBrowser": true,
        "playwright.showTrace": true,
        "powershell.integratedConsole.showOnStartup": false,
        "github.copilot.chat.virtualTools.threshold": 128,
        "github.copilot.chat.newWorkspace.useContext7": true,
        "githubPullRequests.codingAgent.uiIntegration": true,
        "workbench.secondarySideBar.defaultVisibility": "visibleInWorkspace",
        "editor.aiStats.enabled": true,
        "inlineChat.notebookAgent": true,
        "inlineChat.enableV2": true,
        "git.detectWorktrees": true,
        "python.terminal.shellIntegration.enabled": true,
        "python.analysis.supportAllPythonDocuments": true,
        "accessibility.openChatEditedFiles": false,
        "files.associations": {
          "*.ps1": "powershell",
          "*.spec.js": "javascript",
          "*.test.js": "javascript"
        },
        "chat.tools.terminal.autoApprove": {
          "/\\becho\\b/i": { "approve": true, "matchCommandLine": true },
          "/\\bcd\\b/i": { "approve": true, "matchCommandLine": true },
          "/\\bls\\b/i": { "approve": true, "matchCommandLine": true },
          "/\\bcat\\b/i": { "approve": true, "matchCommandLine": true },
          "/\\bpwd\\b/i": { "approve": true, "matchCommandLine": true },
          "/\\bdir\\b/i": { "approve": true, "matchCommandLine": true },
          "/\\bless\\b/i": { "approve": true, "matchCommandLine": true },
          "/\\bmore\\b/i": { "approve": true, "matchCommandLine": true },
          "/\\bhead\\b/i": { "approve": true, "matchCommandLine": true },
          "/\\btail\\b/i": { "approve": true, "matchCommandLine": true },
          "/\\btree\\b/i": { "approve": true, "matchCommandLine": true },
          "/\\bfile\\b/i": { "approve": true, "matchCommandLine": true },
          "/\\bstat\\b/i": { "approve": true, "matchCommandLine": true },
          "/\\bwhich\\b/i": { "approve": true, "matchCommandLine": true },
          "/\\bwhoami\\b/i": { "approve": true, "matchCommandLine": true },
          "/\\bid\\b/i": { "approve": true, "matchCommandLine": true },
          "/\\buname\\b/i": { "approve": true, "matchCommandLine": true },
          "/\\bdate\\b/i": { "approve": true, "matchCommandLine": true },
          "/\\buptime\\b/i": { "approve": true, "matchCommandLine": true },
          "/\\bhistory\\b/i": { "approve": true, "matchCommandLine": true },
          "/\\benv\\b/i": { "approve": true, "matchCommandLine": true },
          
          "/\\bps\\b/i": { "approve": true, "matchCommandLine": true },
          "/\\btop\\b/i": { "approve": true, "matchCommandLine": true },
          "/\\bnetstat\\b/i": { "approve": true, "matchCommandLine": true },
          "/\\bdf\\b/i": { "approve": true, "matchCommandLine": true },
          "/\\bdu\\b/i": { "approve": true, "matchCommandLine": true },
          "/\\bfree\\b/i": { "approve": true, "matchCommandLine": true },
          
          "/\\bgrep\\b/i": { "approve": true, "matchCommandLine": true },
          "/\\bwc\\b/i": { "approve": true, "matchCommandLine": true },
