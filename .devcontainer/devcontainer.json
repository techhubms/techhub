          "/\\bdel\\b/i": { "approve": false, "matchCommandLine": true },
          "/\\bkill\\b/i": { "approve": false, "matchCommandLine": true },
          "/\\beval\\b/i": { "approve": false, "matchCommandLine": true },
          "/\\bchmod\\b/i": { "approve": false, "matchCommandLine": true },
          "/\\bchown\\b/i": { "approve": false, "matchCommandLine": true },
          "/\\bRemove-Item\\b/i": { "approve": false, "matchCommandLine": true }
        }
      }
    }
  },
  "postCreateCommand": "/bin/bash .devcontainer/post-create-jekyll.sh"
}