          "/\\bResolve-Path\\b/i": { "approve": true, "matchCommandLine": true },
          "/\\bSelect-String\\b/i": { "approve": true, "matchCommandLine": true },
          "/\\bSort-Object\\b/i": { "approve": true, "matchCommandLine": true },
          "/\\bWhere-Object\\b/i": { "approve": true, "matchCommandLine": true },
          "/\\bForEach-Object\\b/i": { "approve": true, "matchCommandLine": true },
          "/\\bMeasure-Object\\b/i": { "approve": true, "matchCommandLine": true },
