          "/\\bbundle\\b/i": { "approve": true, "matchCommandLine": true },
          "/\\brspec\\b/i": { "approve": true, "matchCommandLine": true },
          "/\\bpwsh\\b/i": { "approve": true, "matchCommandLine": true },
          "/\\bpython3\\b/i": { "approve": true, "matchCommandLine": true },
          "/\\bpython\\b/i": { "approve": true, "matchCommandLine": true },
          "/\\bnode\\b/i": { "approve": true, "matchCommandLine": true },
