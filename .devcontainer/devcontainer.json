          "/\\bWrite-Error\\b/i": { "approve": true, "matchCommandLine": true },
          "/\\bWrite-Warning\\b/i": { "approve": true, "matchCommandLine": true },
          "/\\bWrite-Verbose\\b/i": { "approve": true, "matchCommandLine": true },
