        "chat.agent.enabled": true,
        "chat.mcp.enabled": true,
        "chat.mcp.autostart": true,
        "chat.checkpoints.enabled": true,
        "chat.editRequests": "inline",
        "chat.math.enabled": true,
        "chat.notifyWindowOnConfirmation": true,
        "chat.todoListTool.enabled": true,
        "chat.agentSessionsViewLocation": "view",
        "powershell.debugging.createTemporaryIntegratedConsole": true,
        "terminal.integrated.defaultProfile.linux": "pwsh",
        "remote.autoForwardPorts": false,
        "remote.autoForwardPortsSource": "hybrid",
        "powershell.integratedConsole.showOnStartup": false,
        "github.copilot.chat.virtualTools.threshold": 128,
        "github.copilot.chat.newWorkspace.useContext7": true,
        "githubPullRequests.codingAgent.uiIntegration": true,
        "workbench.secondarySideBar.defaultVisibility": "visibleInWorkspace",
        "editor.aiStats.enabled": true,
        "inlineChat.notebookAgent": true,
        "inlineChat.enableV2": true,
        "git.detectWorktrees": true,
        "accessibility.openChatEditedFiles": false,
        "files.associations": {
          "*.ps1": "powershell",
          "*.bicep": "bicep",
          "*.json": "jsonc",
          "*.cs": "csharp",
          "*.csx": "csharp",
          "*.csproj": "xml",
          "*.sln": "plaintext",
          "*.props": "xml",
          "*.targets": "xml",
          "*.config": "xml",
          "*.razor": "razor",
          "*.cshtml": "razor"
